<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minimaltools.minimalgamesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MinimalGamesApp">
        <activity
            android:name="com.minimaltools.minimalgamesapp.view.view.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.minimaltools.minimalgamesapp.view.view.activity.MainActivity"
            android:exported="false"
            android:theme="@style/SplashScreenTheme">
        </activity>
        <activity
            android:name="com.minimaltools.minimalgamesapp.view.view.activity.SignupActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>